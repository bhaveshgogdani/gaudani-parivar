# Server Configuration
PORT=5010
NODE_ENV=development

# Database Configuration
# MongoDB connection string
# Format: mongodb://[username:password@]host[:port][/database][?options]
MONGODB_URI=mongodb://localhost:27017/gaudani_parivar

# JWT Authentication
# Secret key for JWT token signing (use a strong random string in production)
JWT_SECRET=your_jwt_secret_key_here_change_in_production
# JWT token expiration time (e.g., 24h, 7d, 30d)
JWT_EXPIRES_IN=24h

# Default Admin User (created only if no admin exists)
# These credentials are used to create the first admin user
DEFAULT_ADMIN_EMAIL=bhavesh@gmail.com
DEFAULT_ADMIN_PASSWORD=Bhavesh@123_
DEFAULT_ADMIN_USERNAME=bhavesh
DEFAULT_ADMIN_FULLNAME=Bhavesh

# File Upload Configuration
# Upload directory path (relative to project root)
# Default: ../../../uploads/results (from backend/src/config/)
UPLOAD_DIR=./uploads/results/
# Maximum file size in bytes (default: 5MB = 5242880 bytes)
MAX_FILE_SIZE=5242880
# Allowed file types (comma-separated MIME types)
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/gif,image/webp,image/bmp,image/tiff,image/svg+xml
